<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_chat_bubble_24"
        android:contentDescription="icon of comment" />

    <TextView
        android:id="@+id/txt_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4029"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/img_chatting"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_chat_24"
        android:contentDescription="icon of chatting" />

    <TextView
        android:id="@+id/txt_chatting_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_favorite_border_24"
        android:contentDescription="icon of like" />

    <TextView
        android:id="@+id/txt_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1947"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

</androidx.appcompat.widget.LinearLayoutCompat>