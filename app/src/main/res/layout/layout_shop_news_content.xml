<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_title"
        android:text="핸드메이드 수제 가죽가방"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_category"
        android:layout_below="@id/txt_title"
        android:text="지역업체 소개"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_period"
        android:layout_below="@id/txt_title"
        android:layout_toRightOf="@id/txt_category"
        android:text="11시간 전"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_below="@id/txt_category"
        android:text="직접 만든 수제가방입니다. 직접 만든 수제가방입니다. 직접 만든 수제가방입니다. 직접 만든 수제가방입니다.  직접 만든 수제가방입니다.직접 만든 수제가방입니다.직접 만든 수제가방입니다.직접 만든 수제가방입니다.직접 만든 수제가방입니다.직접 만든 수제가방입니다.직접 만든 수제가방입니다."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_chatting_count"
        android:layout_below="@id/txt_content"
        android:text="채팅 1개"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_like_count"
        android:layout_below="@id/txt_content"
        android:layout_toRightOf="@id/txt_chatting_count"
        android:layout_marginLeft="10dp"
        android:text="관심 1개"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_view_count"
        android:layout_below="@id/txt_content"
        android:layout_toRightOf="@id/txt_like_count"
        android:layout_marginLeft="10dp"
        android:text="조회 112"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>